#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    int k = (n+1)/2;
   for(int i = 1 ; i<=n ; i++){
       for(int j = 1 ; j<=n ; j++){
           if(i==j){
               cout<<"*";
           }else if((i+j)==(n+1)) {
               cout<<"*";
           }else{
               cout<<" ";
           }

       }
              cout<<endl;
   }
        
}

Output :
for n = 5 
5
*   *
 * * 
  *  
 * * 
*   *
