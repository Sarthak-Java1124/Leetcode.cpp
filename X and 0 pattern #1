#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    int k = (n+1)/2;
   for(int i = 1 ; i<=n ; i++){
       for(int j = 1 ; j<=n ; j++){
           if(i==k || j==k){
               cout<<"X";
           }else {
               cout<<" ";
           }

       }
              cout<<endl;
   }
        
}
Output : for n = 8
8
   X    
   X    
   X    
XXXXXXXX
   X    
   X    
   X    
   X  
